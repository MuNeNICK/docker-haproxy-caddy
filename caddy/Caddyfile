{
	email admin@example.com

        servers {
                listener_wrappers {
                        proxy_protocol {
                                timeout 5s
                                allow 0.0.0.0/0
                        }
                        http_redirect
                        tls
                }
        }

}

https:// {
        handle_errors {
                rewrite * /{err.status_code}
                reverse_proxy error-pages:8080 {
                        header_up X-Original-Status {err.status_code}
                        header_up X-Original-URI {err.uri}
                }
        }
}

import Caddyfiles/*.Caddyfile
